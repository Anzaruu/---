<Window x:Class="KrestikiNoliki.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KrestikiNoliki"
        mc:Ignorable="d"
        Foreground="#FFFF5252"
        Title="MainWindow" Height="300" Width="450">
    <Grid Background="#FFF9C4">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="Result" Grid.Row="0" Text="Игра крестики-нолики" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="25"/>
        <Button x:Name="StartGameWithPerson" Grid.Row="1" Content="Игра с другом" Click="StartGame_Click"  Height="auto"/>
        <Button x:Name="StartGameWithRobot" Grid.Row="2" Content="Игра с роботом" Click="StartGame_Click"  Height="auto"/>
    </Grid>
</Window>
